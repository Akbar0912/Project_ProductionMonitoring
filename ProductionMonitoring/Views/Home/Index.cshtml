@{
    ViewData["Pagename"] = "Home Page";
}

    <div class="d-flex mb-3 flex-row align-items-center ">
        <div class="d-flex flex-column me-auto col-6">
             <h3 class="mb-0">Summary Production</h3>                   
        </div>

            <input class="form-control rounded border border-dark-subtle me-3" type="date" value="dd/mm/yyyy" id="html5-date-input"/>
            <div class="col-3">
                <select class="form-control rounded border border-dark-subtles placement-dropdown" id="selectPlacement">
                    <option value="" selected >location</option>
                    <option value="">Assembly</option>
                    <option value="">Scanning</option>
                </select>
            </div>
    </div>
<div class="row gap-3 d-flex flex-nowrap me-5">
