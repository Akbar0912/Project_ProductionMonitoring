@{
    ViewData["pageName"] = "MonthResult";
}

<div class="card">
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex col-6 justify-content-start align-items-center">
            <h3 class="card-header fw-bold">Production Month Result</h3>
        </div>
        <div class="d-flex align-items-center ms-4">
           @*  <a class="btn btn-primary btn-sm text-white w-100 me-3" asp-controller="DailyReport" asp-action="AddMonth" type="submit"><i class='bx bx-plus-circle'></i><span class="ms-2">Add Noted</span></a> *@
            <div class="">
                <input class="form-control rounded border border-dark-subtle me-3" style="width: 200px;" type="date" value="dd/mm/yyyy" id="html5-date-input" />
            </div>
        </div>
    </div>
    <div class="">
        <table class="table table-striped table-bordered mb-4">
            <tbody class="table-border-bottom-0 ">
                <thead class="text-center ">
                    <tr>
                        <th colspan="2" class="fs-6 fw-bolder text-start">
                            Date 
                        </th>
                        @for (int i = 1; i <= 16; i++){
                            <th class="fs-6 fw-bolder">@i</th>
                        }
                    </tr>
                    <tr class="">
                        <th rowspan="2" class="fs-6 fw-bolder  pb-4">Plan</th>
                        <th class="fs-6 fw-bolder">Daily</th>
                        @for (int i = 100; i<= 1600; i+= 100)
                        {
                            <td>@i</td>
                        }
                    </tr>
                    <tr>
                    <th class="fs-6 fw-bolder" style="padding-right: 30px;">Accum</th>
                        <td>500</td>
                        <td>1200</td>
                    </tr>
                    <tr>
                        <th rowspan="2" class="fs-6 fw-bolder pb-4">Actual</th>
                        <th class="fs-6 fw-bolder">Daily</th>
                        <td>514</td>
                        <td>671</td>
                    </tr>
                    <tr>
                        <th class="fs-6 fw-bolder">Accum</th>
                        <td>514</td>
                        <td>1185</td>
                    </tr>
                    <tr>
                        <th rowspan="2" class="fs-6 fw-bolder pb-4">Diff</th>
                        <th class="fs-6 fw-bolder">Daily</th>
                        <td>+14</td>
                        <td class="text-danger">-29</td>
                    </tr>
                    <tr>
                        <th class="fs-6 fw-bolder">Accum</th>
                        <td>+14</td>
                        <td class="text-danger">-15</td>
                    </tr>
                </thead>
           </tbody>
        </table>
    </div>
    <div class="">
        <table class="table table-striped table-bordered mb-4">
            <tbody class="table-border-bottom-0 ">
            <thead class="text-center ">
                <tr>
                    <th colspan="2" class="fs-6 fw-bolder text-start">
                        Date
                    </th>
                        @for (int i = 17; i <= 31; i++)
                        {
                        <th class="fs-6 fw-bolder">@i</th>
                        }
                </tr>
                <tr class="">
                    <th rowspan="2" class="fs-6 fw-bolder  pb-4">Plan</th>
                    <th class="fs-6 fw-bolder">Daily</th>
                        @for (int i = 500; i <= 1900; i += 100)
                        {
                            <td>@i</td>
                        }
                </tr>
                <tr>
                    <th class="fs-6 fw-bolder">Accum</th>
                        @for (int i = 100; i <= 800; i += 100)
                        {
                            <td>@i</td>
                        }
                </tr>
                <tr>
                    <th rowspan="2" class="fs-6 fw-bolder pb-4">Actual</th>
                    <th class="fs-6 fw-bolder">Daily</th>
                        @for (int i = 100; i <= 800; i += 100)
                        {
                            <td>@i</td>
                        }
                </tr>
                <tr>
                    <th class="fs-6 fw-bolder">Accum</th>
                        @for (int i = 100; i <= 800; i += 100)
                        {
                            <td>@i</td>
                        }
                </tr>
                <tr>
                    <th rowspan="2" class="fs-6 fw-bolder pb-4">Diff</th>
                    <th class="fs-6 fw-bolder">Daily</th>
                    <td>+14</td>
                    <td class="text-danger">-29</td>
                </tr>
                <tr>
                    <th class="fs-6 fw-bolder">Accum</th>
                    <td>+14</td>
                    <td class="text-danger">-15</td>
                </tr>
            </thead>
            </tbody>
        </table>
    </div>
</div>