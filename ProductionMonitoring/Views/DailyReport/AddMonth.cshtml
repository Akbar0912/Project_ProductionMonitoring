<div class="row">
    <div class="col-xl">
        <div class="card mb-5">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Add Production Monthly</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bolder fs-6" for="basic-default-company">Model</label>
                        <input class="form-control" aria-label="With textarea" placeholder="Model"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bolder fs-6" for="basic-default-company">P/O</label>
                        <input type="text" class="form-control" id="basic-default-company" />
                        @* <div class="form-text">You can use letters, numbers & periods</div> *@
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bolder fs-6" for="basic-default-company">PROD</label>
                        <input type="text" class="form-control" id="basic-default-company" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bolder fs-6" for="basic-default-company">Date</label>
                        <input type="month" class="form-control" id="basic-default-company" />
                    </div>
                    <div class="d-flex mb-3">
                        <div class="table-responsive text-nowrap col-1">
                            <table class="table table-striped table-bordered ">
                                <thead class="text-center ">
                                    <tr class="">
                                        <th class="fs-6 py-5 fw-bolder">Plan</th>
                                    </tr>
                                </thead>
                                <tbody class="table-border-bottom-0 ">
                           
                                </tbody>
                            </table>
                        </div>
                        <div class="table-responsive text-nowrap col-11">
                            <table class="table table-striped table-bordered ">
                                <thead class="text-center">
                                    <tr>
                                        @for (int i = 1; i <= 31; i++)
                                        {
                                            <td class="fs-6 fw-bolder">@i</td>
                                        }
                                    </tr>
                                </thead>
                                <tbody class="table-border-bottom-0 ">
                                    <tr>
                                        @for (int i = 1; i <= 31; i++)
                                        {
                                            <td class="py-3">
                                                <input class="fw-bold text-dark" style="width:  70px;" type="number" id="html5-time-input-@i" />
                                            </td>
                                        }
                                      </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <a type="submit" class="btn btn-primary" asp-controller="DailyReport" asp-action="DailyMonth">Submit</a>
                </form>
            </div>
        </div>
    </div>
</div>
