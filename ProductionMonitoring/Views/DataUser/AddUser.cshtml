<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add New User</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Full Name</label>
                        <input type="text" class="form-control" id="basic-default-company" placeholder="Full Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Username</label>
                        <input type="text" class="form-control" id="basic-default-company" placeholder="Username" />
                        @* <div class="form-text">You can use letters, numbers & periods</div> *@
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Email</label>
                        <input type="email" class="form-control" id="basic-default-company" placeholder="example" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Password</label>
                        <input type="password" class="form-control" id="basic-default-company" value="12345678" />
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1" class="form-label">Level</label>
                        <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example" />
                        <option selected>Level</option>
                        <option value="1">Admin</option>
                        <option value="2">Spv</option>
                        </select>
                    </div>
                    <a type="submit" class="btn btn-primary" asp-controller="DataUser" asp-action="DataUser">Send</a>
                </form>
            </div>
        </div>
    </div>
</div>